{
  "identifier": "main-capability",
  "description": "Main capability for BibleMarker app",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:path:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$HOME/Library/Mobile Documents/iCloud~app~biblemarker/**"
        },
        {
          "path": "/private/var/mobile/Library/Mobile Documents/iCloud~app~biblemarker/**"
        }
      ]
    },
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists",
    "fs:allow-appdata-write-recursive",
    "fs:allow-appdata-read-recursive",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "opener:default"
  ]
}